---
import { linkHover } from '@variants/linkHover';

const list = [
	{
		href: '#',
		date: new Date('2024-07-27'),
		tags: ['お知らせ', '最新情報', '他カテゴリ'],
		title: '年末年始の営業に関してのお知らせ',
	},
	{
		href: '#',
		date: new Date('2024-07-27'),
		tags: ['お知らせ', '最新情報', '他カテゴリ'],
		title: '年末年始の営業に関してのお知らせ',
	},
	{
		href: '#',
		date: new Date('2024-07-27'),
		tags: ['お知らせ', '最新情報', '他カテゴリ'],
		title: '年末年始の営業に関してのお知らせ',
	},
	{
		href: '#',
		date: new Date('2024-07-27'),
		tags: ['お知らせ', '最新情報', '他カテゴリ'],
		title: '年末年始の営業に関してのお知らせ',
	},
	{
		href: '#',
		date: new Date('2024-07-27'),
		tags: ['お知らせ', '最新情報', '他カテゴリ'],
		title: '年末年始の営業に関してのお知らせ',
	},
];
---

<div class="max-md:mt-[30px]">
	<ul data-fadein="x-sequence">
		{
			list.map((item) => (
				<li class="first:border-t border-b border-black">
					<a
						href={item.href}
						class={linkHover({
							class: 'block p-[20px]',
						})}
					>
						<div class="flex gap-[20px]">
							<p class="font-medium text-min md:text-sm">
								{item.date
									.toLocaleDateString('ja-JP', {
										year: 'numeric',
										month: '2-digit',
										day: '2-digit',
									})
									.replace(/\//g, '.')}
							</p>
							<ul class="flex gap-[10px] text-min md:text-sm">
								{item.tags.map((tag) => (
									<li>
										<p class="font-bold md:text-sm">#{tag}</p>
									</li>
								))}
							</ul>
						</div>
						<p class="font-medium leading-tight mt-[10px] max-md:text-2sm md:font-base">
							{item.title}
						</p>
					</a>
				</li>
			))
		}
	</ul>
</div>
